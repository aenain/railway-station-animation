- content_for :head do
  = stylesheet_link_tag 'reset', 'slider', 'dropdown', 'simulation', 'font-awesome'
  = javascript_include_tag 'jquery-1.8.3', 'jquery.knob', 'jquery-ui-1.9.2.min', 'jquery.dropdown'

#controls
  .param
    .label acceleration
    .value
      = text_field_tag "acceleration", 100, data: { min: 10, max: 600 }, class: 'knob'

  = link_to '', '#', id: 'play', class: 'primary icon-play'

:coffeescript
  $ ->
    knobColors =
      foreground:
        normal: "rgb(31, 184, 208)"
        danger: "rgb(159, 63, 95)"
      background: "rgb(254, 250, 245)"

    $(".knob").knob(
      width: 120
      height: 120
      fgColor: knobColors.foreground.normal
      bgColor: knobColors.background
    )