- content_for :head do
  = stylesheet_link_tag 'reset', 'slider', 'dropdown', 'simulation'
  = javascript_include_tag 'jquery-1.8.3', 'jquery.knob', 'jquery-ui-1.9.2.min', 'jquery.dropdown', 'simulation'

= form_for @simulation do |f|
  #settings.settings
    = render partial: 'settings', locals: { f: f, read_only: false }

  - 2.times do
    %br/

  .actions
    = f.submit 'Simulate', class: 'primary'

:coffeescript
  $ ->
    Simulation.initFields({ disabled: false })